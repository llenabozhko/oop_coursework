<Window x:Class="oop_coursework.Views.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New User" Height="700" Width="500"
        WindowStartupLocation="CenterOwner">
    <Grid Background="#F5F5F5">
        <Border Margin="30"
                Background="White"
                CornerRadius="8"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Title -->
                <TextBlock Grid.Row="0"
                          Text="Add New User"
                          FontSize="24"
                          FontWeight="SemiBold"
                          Margin="0,0,0,20"/>

                <!-- Form Content -->
                <ScrollViewer Grid.Row="1"
                             VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="First Name"
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,8"/>
                        <TextBox x:Name="FirstNameTextBox"
                                Height="40"
                                FontSize="14"
                                Padding="10,8"
                                Margin="0,0,0,20"
                                BorderBrush="#E0E0E0"/>

                        <TextBlock Text="Last Name"
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,8"/>
                        <TextBox x:Name="LastNameTextBox"
                                Height="40"
                                FontSize="14"
                                Padding="10,8"
                                Margin="0,0,0,20"
                                BorderBrush="#E0E0E0"/>

                        <TextBlock Text="Username"
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,8"/>
                        <TextBox x:Name="UsernameTextBox"
                                Height="40"
                                FontSize="14"
                                Padding="10,8"
                                Margin="0,0,0,20"
                                BorderBrush="#E0E0E0"/>

                        <TextBlock Text="Password"
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,8"/>
                        <PasswordBox x:Name="PasswordBox"
                                   Height="40"
                                   FontSize="14"
                                   Padding="10,8"
                                   Margin="0,0,0,20"
                                   BorderBrush="#E0E0E0"/>

                        <TextBlock Text="Date of Birth"
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,8"/>
                        <DatePicker x:Name="DateOfBirthPicker"
                                  Height="40"
                                  FontSize="14"
                                  Padding="10,8"
                                  Margin="0,0,0,20"/>

                        <TextBlock Text="Role"
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,8"/>
                        <ComboBox x:Name="RoleComboBox"
                                Height="40"
                                FontSize="14"
                                Padding="10,8"
                                Margin="0,0,0,20">
                            <ComboBoxItem Content="Student"/>
                            <ComboBoxItem Content="Teacher"/>
                            <ComboBoxItem Content="Administrator"/>
                        </ComboBox>

                        <TextBlock Text="Specialty"
                                 x:Name="SpecialtyLabel"
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,8"/>
                        <TextBox x:Name="SpecialtyTextBox"
                                Height="40"
                                FontSize="14"
                                Padding="10,8"
                                Margin="0,0,0,20"
                                BorderBrush="#E0E0E0"/>

                        <TextBlock Text="Subject"
                                 x:Name="SubjectLabel"
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,8"/>
                        <ComboBox x:Name="SubjectComboBox"
                                Height="40"
                                FontSize="14"
                                Padding="10,8"
                                Margin="0,0,0,20">
                            <ComboBoxItem Content="Математика"/>
                            <ComboBoxItem Content="Англійська мова"/>
                            <ComboBoxItem Content="Мистецтво"/>
                        </ComboBox>
                    </StackPanel>
                </ScrollViewer>

                <!-- Buttons -->
                <Grid Grid.Row="2"
                      Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Content="Cancel"
                            Grid.Column="0"
                            Click="CancelButton_Click"
                            Height="45"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Background="#6C757D"
                            Foreground="White"
                            Margin="0,0,10,0"/>

                    <Button Content="Add User"
                            Grid.Column="1"
                            Click="AddButton_Click"
                            Height="45"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Background="#2196F3"
                            Foreground="White"
                            Margin="10,0,0,0"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
