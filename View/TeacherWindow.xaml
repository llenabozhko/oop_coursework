<local:BaseWindow x:Class="oop_coursework.Views.TeacherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:oop_coursework.Views"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        Title="Teacher Dashboard" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Menu -->
            <RowDefinition Height="*"/> <!-- Content -->
        </Grid.RowDefinitions>

        <!-- Main Content -->
        <Border Grid.Row="1"
                Background="#F5F5F5"
                Padding="30">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Welcome -->
                    <RowDefinition Height="Auto"/> <!-- Subject Info -->
                    <RowDefinition Height="Auto"/> <!-- Settings -->
                    <RowDefinition Height="*"/> <!-- Students Grid -->
                    <RowDefinition Height="Auto"/> <!-- Save Button -->
                </Grid.RowDefinitions>

                <!-- Welcome Section -->
                <TextBlock Grid.Row="0"
                          x:Name="WelcomeText"
                          FontSize="24"
                          FontWeight="SemiBold"
                          Margin="0,0,0,20"/>

                <!-- Subject Info Section -->
                <Border Grid.Row="1"
                        Background="White"
                        CornerRadius="8"
                        Padding="20"
                        Margin="0,0,0,20"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        x:Name="SubjectSelectionPanel">
                    <StackPanel>
                        <TextBlock x:Name="SubjectNameText"
                                 FontWeight="SemiBold"
                                 FontSize="18"/>
                    </StackPanel>
                </Border>

                <!-- Settings Section -->
                <Border Grid.Row="2"
                        Background="White"
                        CornerRadius="8"
                        Padding="20"
                        Margin="0,0,0,20"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TabControl Grid.Row="0" Margin="0,0,0,10">
                            <TabItem Header="Main Екзамен">
                                <Grid Margin="10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Semester Settings -->
                                    <StackPanel Grid.Column="0" Margin="0,0,40,0">
                                        <TextBlock Text="Semester"
                                                 FontWeight="SemiBold"
                                                 Margin="0,0,0,8"/>
                                        <ComboBox x:Name="SemesterComboBox"
                                                Width="100">
                                            <ComboBoxItem Content="1"/>
                                            <ComboBoxItem Content="2"/>
                                        </ComboBox>
                                    </StackPanel>

                                    <!-- Екзамен Date Settings -->
                                    <StackPanel Grid.Column="1" Margin="0,0,40,0">
                                        <TextBlock Text="Екзамен Date"
                                                 FontWeight="SemiBold"
                                                 Margin="0,0,0,8"/>
                                        <DatePicker x:Name="ExamDatePicker"
                                                  Width="200"
                                                  DisplayDateStart="{x:Static System:DateTime.Today}"/>
                                    </StackPanel>

                                    <!-- Assessment Type Display -->
                                    <StackPanel Grid.Column="2" Margin="0,0,40,0">
                                        <TextBlock Text="Assessment Type"
                                                 FontWeight="SemiBold"
                                                 Margin="0,0,0,8"/>
                                        <TextBlock x:Name="AssessmentTypeText"
                                                 Text="Екзамен"
                                                 Margin="0,5,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </TabItem>

                            <TabItem Header="Retake" x:Name="RetakeTab">
                                <Grid Margin="10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Retake Date Settings -->
                                    <StackPanel Grid.Column="0" Margin="0,0,40,0">
                                        <TextBlock Text="Retake Date"
                                                 FontWeight="SemiBold"
                                                 Margin="0,0,0,8"/>
                                        <DatePicker x:Name="RetakeDatePicker"
                                                  Width="200"
                                                  DisplayDateStart="{x:Static System:DateTime.Today}"/>
                                    </StackPanel>
                                </Grid>
                            </TabItem>
                        </TabControl>

                        <Button Grid.Row="1"
                                Content="Update Settings"
                                Click="UpdateSettings_Click"
                                Style="{StaticResource PrimaryButton}"
                                HorizontalAlignment="Right"
                                Width="150"/>
                    </Grid>
                </Border>

                <!-- Students Grid -->
                <Border Grid.Row="3"
                        Background="White"
                        CornerRadius="8"
                        Padding="20"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Student Grades"
                                 FontWeight="SemiBold"
                                 FontSize="18"
                                 Margin="0,0,0,15"/>

                        <DataGrid x:Name="StudentsGrid"
                                  Grid.Row="1"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="False"
                                  Margin="0,0,0,15">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Student Name"
                                                  Binding="{Binding Student.FullName}"
                                                  IsReadOnly="True"
                                                  Width="200"/>
                                <DataGridTextColumn Header="Main Екзамен Score"
                                                  Binding="{Binding Grade.Score}"
                                                  Width="120"/>
                                <DataGridTextColumn Header="Retake Score"
                                                  Binding="{Binding Grade.RetakeScore}"
                                                  Width="120"/>
                                <DataGridTextColumn Header="Final Score"
                                                  Binding="{Binding FinalScore}"
                                                  IsReadOnly="True"
                                                  Width="100"/>
                                <DataGridTextColumn Header="Status"
                                                  Binding="{Binding Grade.Status}"
                                                  IsReadOnly="True"
                                                  Width="120"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <Button Grid.Row="2"
                                Content="Save Grades"
                                Click="SaveGrades_Click"
                                Style="{StaticResource PrimaryButton}"
                                HorizontalAlignment="Right"
                                Width="150"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</local:BaseWindow>
